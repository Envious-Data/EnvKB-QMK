{
    "manufacturer": "EnviousDesigns",
    "keyboard_name": "MCRO 2.0",
    "maintainer": "Envious.Design",
    "processor": "RP2040",
    "bootloader": "rp2040",
    "usb": {
		"vid": "0x2345",
        "pid": "0x0548",
        "device_version": "2.0.1"
    },
	
    "features": {
        "bootmagic": true,
        "command": false,
        "console": false,
        "extrakey": true,
        "mousekey": true,
        "nkro": true,
		"rgb_matrix": true,
		"encoder": true
		"rgblight": false,
        "backlight": false,
    },

    "encoder": {
        "rotary": [
            { "pin_a": "GP6", "pin_b": "GP7", "resolution": 4 }
        ]
    },

    "rgblight": {
        "pin": "GP0",
    },
    "rgb_matrix": {
        "driver": "WS2812",
        "layout": [
            { "flags": 2, "x": 0, "y": 0 },
            { "flags": 2, "x": 1, "y": 0 },
            { "flags": 2, "x": 2, "y": 0 },
            { "flags": 2, "x": 3, "y": 1.25 },
            { "flags": 2, "x": 0, "y": 1.25 },
            { "flags": 2, "x": 1, "y": 1.25 },
            { "flags": 2, "x": 2, "y": 1.25 },
            { "flags": 2, "x": 3, "y": 2.5 },
            { "flags": 2, "x": 0, "y": 2.5 },
            { "flags": 2, "x": 1, "y": 2.5 },
            { "flags": 2, "x": 2, "y": 2.5 },
            { "flags": 2, "x": 3, "y": 2.5 },
        ]
	},

    "diode_direction": "COL2ROW",
    "matrix_pins": {
        "cols": ["GP8", "GP9", "GP10", "GP11", "GP12"],
        "rows": ["GP13", "GP14", "GP15"]
    },

    "url": "http://envious.design",
    "layouts": {
        "LAYOUT": {
            "layout": [
                { "matrix": [0, 0], "x": 0.0, "y": 0.0 },
                { "matrix": [0, 1], "x": 1.0, "y": 0.0 },
                { "matrix": [0, 2], "x": 2.0, "y": 0.0 },
                { "matrix": [0, 3], "x": 3.0, "y": 0.0 },
                { "matrix": [1, 0], "x": 0.0, "y": 1.25 },
                { "matrix": [1, 1], "x": 1.0, "y": 1.25 },
                { "matrix": [1, 2], "x": 2.0, "y": 1.25 },
                { "matrix": [1, 3], "x": 3.0, "y": 1.25 },
                { "matrix": [2, 0], "x": 0.0, "y": 2.5 },
                { "matrix": [2, 1], "x": 1.0, "y": 2.5 },
                { "matrix": [2, 2], "x": 2.0, "y": 2.5 },
                { "matrix": [2, 3], "x": 3.0, "y": 2.5 },
                { "matrix": [2, 4], "x": 4.0, "y": 2.5 }
            ]
        }
    }
}